<?xml version='1.0' encoding='UTF-8'?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.rahulmadbhavi.training.beans.MetroLine" table="metroline">

		<id name="id">
 			<generator class="increment"></generator>
		</id>

		<property name="color"></property>

		<bag name="stations" cascade="all">
			<key column="lineid"></key>
			<one-to-many class="com.rahulmadbhavi.training.beans.MetroStation" />
		</bag>

	</class>
	
	<class name="com.rahulmadbhavi.training.beans.MetroStation" table="metrostation">
	
		<id name="id">
			<generator class="increment"></generator>
		</id>
	
		<property name="name"></property>
		
		<property name="underground">
			<column sql-type="BOOLEAN" name="underground" />
		</property>
		
		<property name="platforms"></property>
		
	</class>

</hibernate-mapping>